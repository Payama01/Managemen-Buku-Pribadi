<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manajemen Buku</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Manajemen Buku</h1>
    
    <form id="bookForm" enctype="multipart/form-data">
        <input type="text" id="nomorbuku" placeholder="Nomor Buku" required>
        <input type="text" id="name" placeholder="Nama Buku" required>
        <input type="number" id="halaman" placeholder="Jumlah Halaman" required>
        <input type="text" id="penulis" placeholder="Nama Penulis" required>
        <input type="text" id="lokasi" placeholder="Lokasi Buku" required>
        <input type="file" id="ebook" name="ebook" placeholder="EBook (jika ada)" accept=".pdf, .epub, .mobi">
        <input type="text" id="searchInput" placeholder="Cari berdasarkan nomor buku...">
        <button type="submit" id="submitButton">Tambah Buku</button>
    </form>

    <table id="booksTable">
        <thead>
            <tr>
                <th>Nomor Buku</th>
                <th>Nama Buku</th>
                <th>Jumlah Halaman</th>
                <th>Penulis</th>
                <th>Lokasi</th>
                <th>EBook</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach(book => { %>
                <tr>
                    <td><%= book.nomorbuku %></td>
                    <td><%= book.name %></td>
                    <td><%= book.halaman %></td>
                    <td><%= book.penulis %></td>
                    <td><%= book.lokasi %></td>
                    <td>
                        <% if (book.filepath) { %>
                            <a href="<%= book.filepath.replace(/\\/g, '/') %>" target="_blank">Baca PDF</a>
                        <% } else { %>
                            Tidak ada
                        <% } %>
                    </td>
                    <td>
                        <button onclick="deleteBook('<%= book._id %>')">Hapus</button>
                        <button onclick="editBook('<%= book._id %>')">Edit</button>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <script src="/script.js"></script>
</body>
</html>